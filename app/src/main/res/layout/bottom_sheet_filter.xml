<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter &amp; Sort"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            style="@style/FilterTitleStyle"
            android:text="Urutkan Berdasarkan" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_terbaru"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terbaru"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_terlaris"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terlaris" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_harga_rendah"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Terendah" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_harga_tinggi"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Tertinggi" />
        </com.google.android.material.chip.ChipGroup>

        <View style="@style/DividerStyle" />

        <TextView
            style="@style/FilterTitleStyle"
            android:text="Kategori" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cat_all"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cat_sepeda"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepeda" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cat_sparepart"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spare Parts" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cat_aksesoris"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aksesoris" />
        </com.google.android.material.chip.ChipGroup>

        <View style="@style/DividerStyle" />

        <TextView
            style="@style/FilterTitleStyle"
            android:text="Rentang Harga (Rp)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_min_price"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_input"
                android:hint="Min"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="8dp"/>

            <EditText
                android:id="@+id/et_max_price"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_input"
                android:hint="Max"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Reset"
                android:textColor="@color/text_secondary_dark"
                app:strokeColor="@color/grey"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Terapkan"
                android:textColor="@color/white"
                app:backgroundTint="@color/Secondary_1"
                app:cornerRadius="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>