<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    tools:context=".client.ui.detailProduk.UlasanFragment">

    <TextView
        android:id="@+id/title_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Berikan penilaian anda"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/rating_stars_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title_input"
        app:layout_constraintStart_toStartOf="@id/title_input">

        <ImageView android:id="@+id/star1" style="@style/RatingStarInput" android:src="@drawable/ic_full_star"/>
        <ImageView android:id="@+id/star2" style="@style/RatingStarInput" android:src="@drawable/ic_full_star"/>
        <ImageView android:id="@+id/star3" style="@style/RatingStarInput" android:src="@drawable/ic_full_star"/>
        <ImageView android:id="@+id/star4" style="@style/RatingStarInput" android:src="@drawable/ic_full_star"/>
        <ImageView android:id="@+id/star5" style="@style/RatingStarInput" android:src="@drawable/ic_empty_star"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_comment"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:hint="Tuliskan komentar Anda di sini..."
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textSize="14sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/rating_stars_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/button_kirim"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Kirim Ulasan"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/dark_blue"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_comment"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_line_reviews"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/button_kirim"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_reviews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider_line_reviews"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_review" />

</androidx.constraintlayout.widget.ConstraintLayout>