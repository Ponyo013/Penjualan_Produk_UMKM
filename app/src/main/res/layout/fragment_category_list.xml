<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".client.ui.beranda.CategoryListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_category"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/black"
        app:titleTextAppearance="@style/Toolbar.TitleTextStyle"
        app:title="Spare Parts"
        app:navigationIcon="@drawable/back_icon" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Semua produk dalam kategori ini"
        android:textColor="@color/text_secondary_dark"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_category" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/filter_sort_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/description_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_products_in_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"

        android:paddingBottom="75dp" android:clipToPadding="false" app:layout_constraintTop_toBottomOf="@id/filter_sort_container"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_product"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>