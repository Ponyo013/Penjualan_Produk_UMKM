<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Penjualan_Produk_UMKM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Penjualan_Produk_UMKM" parent="Theme.Material3.Light.NoActionBar">
        <!-- Make default background white for the whole app -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Widget.Penjualan_Produk_UMKM.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Penjualan_Produk_UMKM.SmallComponent</item>

        <item name="boxStrokeColor">@color/Secondary_2</item>
        <item name="hintTextColor">@color/Secondary_2</item>
    </style>

    <style name="ShapeAppearance.Penjualan_Produk_UMKM.SmallComponent" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>

        <!-- Indicator -->
        <item name="tabIndicatorColor">@color/Secondary_1</item>

        <!-- Text colors (unselected / selected) -->
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/Secondary_1</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>